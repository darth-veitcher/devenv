{
  "name": "{{ cookiecutter.project_name }} | Development Environment",
  "dockerComposeFile": [
    "compose.yml"{% if cookiecutter.enable_mcp_services == 'yes' %},
    "compose-mcp.yml"{% endif %}
  ],
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/va-h/devcontainers-features/uv:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/mikaello/devcontainer-features/modern-shell-utils:2.0.0": {},
    "ghcr.io/devcontainers-extra/features/pre-commit:2": {}
    // "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "forwardPorts": [
    8000{% if cookiecutter.enable_mcp_services == 'yes' and cookiecutter.enable_searxng == 'yes' %},
    8080{% endif %}{% if cookiecutter.enable_mcp_services == 'yes' and cookiecutter.enable_crawl4ai == 'yes' %},
    11235{% endif %}
  ],
  "portsAttributes": {
    "8000": {
      "label": "FastAPI App",
      "onAutoForward": "notify"
    }{% if cookiecutter.enable_mcp_services == 'yes' and cookiecutter.enable_searxng == 'yes' %},
    "8080": {
      "label": "SearXNG MCP",
      "onAutoForward": "notify"
    }{% endif %}{% if cookiecutter.enable_mcp_services == 'yes' and cookiecutter.enable_crawl4ai == 'yes' %},
    "11235": {
      "label": "Crawl4AI MCP",
      "onAutoForward": "notify"
    }{% endif %}
  },
  "shutdownAction": "stopCompose",
  "remoteUser": "node",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "ms-python.python",
        "charliermarsh.ruff"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "mounts": [
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=claude-code-config-${devcontainerId},target=/home/node/.claude,type=volume",
    // don't make the docker cache unique per devcontainerId, otherwise it will not be shared between containers
    "source=docker-cache,target=/var/lib/docker,type=volume",
    // HF Cache
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.cache/huggingface,target=/workspace/.cache/huggingface,type=bind,consistency=cached"
  ],
  "containerEnv": {
    "DISPLAY": "host.docker.internal:0.0"
  },
  "remoteEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true",
    // the original host directory which is needed for volume mount commands from inside the container (Docker in Docker)
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder:-.}",
    // HF Cache
    "HF_HOME": "/workspace/.cache/huggingface",
    "TRANSFORMERS_CACHE": "/workspace/.cache/huggingface/hub",
    "HF_DATASETS_CACHE": "/workspace/.cache/huggingface/datasets"
  },
  "postCreateCommand": "screen -DmS playwright .devcontainer/playwright.sh",
  "postStartCommand": "screen -DmS startup .devcontainer/startup.sh"
}
