{
  "name": "{{ cookiecutter.project_name }} | Development Environment",
  "dockerComposeFile": ["compose.yml"],
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/va-h/devcontainers-features/uv:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/mikaello/devcontainer-features/modern-shell-utils:2.0.0": {},
    "ghcr.io/devcontainers-extra/features/pre-commit:2": {}
    // "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "forwardPorts": [11235, 8080, 8000],
  "portsAttributes": {
    "8080": {
      "label": "SearXNG MCP",
      "onAutoForward": "openBrowser"
    },
    "11235": {
      "label": "Craw4AI MCP",
      "onAutoForward": "openBrowser"
    },
    "8000": {
      "label": "FastAPI App",
      "onAutoForward": "openBrowser"
    }
  },
  "shutdownAction": "stopCompose",
  "remoteUser": "node",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "mounts": [
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=claude-code-config-${devcontainerId},target=/home/node/.claude,type=volume",
    // don't make the docker cache unique per devcontainerId, otherwise it will not be shared between containers
    "source=devenv-docker-cache,target=/var/lib/docker,type=volume"
  ],
  "remoteEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true",
    // the original host directory which is needed for volume mount commands from inside the container (Docker in Docker)
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder:-.}"
  },
  "postCreateCommand": "",
  "postStartCommand": "screen -DmS startup .devcontainer/startup.sh"
}
